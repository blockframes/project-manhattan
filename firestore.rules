rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;

      match /movies/{movieId} {
        allow read, write: if true;
          match /terms/{termsId} {
            allow read, write: if true;
          }
          match /rights/{rightId} {
            allow read, write: if true;
          }
      }
    }
  }
}